<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rgvms.mapper.MisMapper">

	<!-- mis 게시물 리스트 조회 -->
	<select id="list" resultType="com.rgvms.domain.MisVO">
	<![CDATA[
		SELECT
			MIS_NO,
			TIMES, 
			MIS_DATE,
			TITLE, 
			MIS_REGDATE
		FROM
			TBL_MIS
		WHERE MIS_NO >= 0 
		ORDER BY MIS_NO DESC
	]]>
	</select>

	<!-- mis 게시물 등록 -->
	<insert id="insert">
	
	  <selectKey keyProperty="misNo" resultType="Integer" order="BEFORE">
	  	select SEQ_MIS.NEXTVAL from dual
	  </selectKey>
		INSERT INTO TBL_MIS
		(MIS_NO, 
		TIMES, MIS_DATE, TITLE)
		VALUES
		(#{misNo}, #{times}, #{misDate} , #{title})
	</insert>


	<!-- mis 검색할 때 전체 카운트 가져오기 -->
	<select id="listSearchCount" resultType="int">
		<![CDATA[  
 		 SELECT 
 		 	COUNT(MIS_NO) 
 		 FROM 
 		 	TBL_MIS 
  		WHERE 
  			MIS_NO > 0 
		]]>
		
		<include refid="search"></include>


	</select>


	<!-- mis 게시물 삭제 -->
	<delete id="delete">
		DELETE FROM 
			TBL_MIS
		WHERE 
			MIS_NO = #{misNo}
	</delete>


	<!-- mis 상세 조회 -->
	<select id="select" resultType="com.rgvms.domain.MisVO">
		SELECT
			TIMES,
			TITLE
		FROM
			TBL_MIS
		WHERE MIS_NO = #{misNo}
	</select>


	<!-- mis 수정 -->
	<update id="update">
		UPDATE 
			TBL_MIS
		SET TIMES = #{times}, TITLE = #{title}
		WHERE
			MIS_NO = #{misNo}
	</update>


	<!-- 제목 검색 -->
	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 't'.toString()">
				and TITLE like '%' || #{keyword} || '%'
			</if>
		</if>
	</sql>


