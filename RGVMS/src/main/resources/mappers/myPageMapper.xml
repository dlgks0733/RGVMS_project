<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rgvms.mapper.MyPageMapper">
	
	<!-- 1. 사용자 :: 내정보확인페이지 -->
	<select id="myInfo" resultType="com.rgvms.domain.UserVO">
		SELECT
		user_No, grade, state, user_Name
	    FROM
	    TBL_USER
	    WHERE user_No = #{userNo}
	</select>

	<!-- 2. 사용자 :: 내정보수정하기 -->
	<update id="myInfoUpdate">
		UPDATE
		TBL_USER
		SET 
			grade = #{grade},
			user_Name = #{userName},
			state = #{state},
			user_Pw = #{userPw}
		WHERE
			user_No = #{userNo}
	</update>
	
